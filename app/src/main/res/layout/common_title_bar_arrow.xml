<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_title">

    <TextView
        android:id="@+id/tv_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        tools:ignore="MissingConstraints"
        android:background="@color/colorPrimary">

        <com.bigoffs.pdaremake.ui.customview.FreeArrowView
            android:id="@+id/fa_left"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:paddingLeft="17dp"
            android:paddingRight="27dp"
            app:poleRatio="0.6"
            app:lineStrokeWidth="3dp"
            app:arrowColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:text="标题"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/iv_right_btn"
            android:layout_marginTop="21dp"
            android:layout_marginRight="21dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@null"
            android:src="@mipmap/icon_mine_setting"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            />


        <TextView
            android:id="@+id/iv_fqbar_right_text"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="跳过"
            android:textSize="14dp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:layout_marginEnd="15dp"/>






    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>